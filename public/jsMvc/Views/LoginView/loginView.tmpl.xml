<fest:template xmlns:fest="http://fest.mail.ru" context_name="params">
    <div class="wrapper-block">
        <a class="wrapper-block__row-back" href="/"> &lt; </a>
        <a style="cursor: default;" class="wrapper-block__logo" href="/"> <div style="cursor: pointer; display: inline-block;">Blendocu</div> </a>
        <div class="wrapper-block__main js-wrapper-login">
                <div class="wrapper-block__section-header">Login</div>
                <fest:include src="./../../Components/Form/form.tmpl.xml"/>
                <fest:get name="blendocu-form">params</fest:get>

                <div class="register-login-change">
                    <div class="form-description-text"> You are not registered? </div>
                    <a class="register-login-change__button" href="/register">Register</a>
                </div>
        </div>
        <fest:include src="./../../Components/Colour/colour.tmpl.xml"/>
        <fest:get name="colour">params</fest:get>
    </div>
</fest:template>