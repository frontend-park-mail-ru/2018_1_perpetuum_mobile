        <a class="wrapper-block__row-back" href="/login"> &lt; </a>
        <div class="wrapper-block__logo"> <a class="wrapper-block__logo--inner" href="/"> Blendocu </a> </div>
        <div class="wrapper-block__main js-wrapper-login">
            <div class="wrapper-block__section-header">Reset password</div>
            <fest:include src="./../../Components/Form/form.tmpl.xml"/>
            <fest:get name="blendocu-form">params</fest:get>

            <div class="register-login-change">
                <div class="form-description-text">Have an account?</div>
                <a class="register-login-change__button" href="/login">Login</a>
            </div>
        </div>
        <fest:include src="./../../Components/Colour/colour.tmpl.xml"/>
        <fest:get name="colour">params</fest:get>
    </div>
</fest:template>